<div class= 'signup-box'>
<h2 class='text-center'>Sign up</h2>
<div class='row'>
	<div class='col-md-12'>

		<%= form_for(resource, as: resource_name,:html=> {class:"form-horizontal",role: "form"}, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class='form-group'>
		<div class="blank"></div>
	  <div class="control-label col-md-3">
		  <%= f.label :email,"What's your email?",class: "form-label email-label"%><br />
	  </div>
	  <div class="col-md-9">
		  <%= f.email_field :email, class: 'form-control email-field',autofocus: true, placeholder: "abc@domain.com",required: "true"%>
	  </div>
  </div>
  <div class="form-group">
	  <div class="control-label col-md-3">
		  <%= f.label :password ,"Password please(atleast 6 char)", class:"form-label pass-label"%>
	  </div>
	  <div class='col-md-9'>
    <%= f.password_field :password, class: 'form-control pass-field',autocomplete: "off",placeholder: "************", require: "true"%>
	  </div>
  </div>

  <div class="form-group">
	  <div class='control-label col-md-3'>
		  <%= f.label :password_confirmation, "once again", class: "form-label pass-label"%><br />
	  </div>
	  <div class='col-md-9'>
    <%= f.password_field :password_confirmation, class:'form-control pass-cofirm',autocomplete: "off", placeholder: "***********", required: "true"%>
	  </div>
  </div>

  <div class="form-group">
	  <div class="col-md-offset-3 col-md-9">
		  <%= f.submit "Sign up",class: 'signup-btn' %>
	  </div>
  </div>
<% end %>

<div class="form-group">
	<div class='col-md-offset-3 col-md-9'>
		<%= render "devise/shared/links" %>
	</div>
</div>
	</div>
</div>

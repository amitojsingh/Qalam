<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <% flash.each do |key,message| %>
	<%= key == "notice"? "success": "danger" %>
	<%= message %>
	  <%end%>
    <%= yield %>
  </body>
</html>

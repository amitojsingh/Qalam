<div class="index-wrapper">
	<div class="new-article-wrapper">
		<% if user_signed_in? %>
			<%=link_to "+ New Article", new_article_path, class:"btn btn-default btn-lg",id:"new-article-btn",class:"new-article-lnk" %>
		 <%end %>
	</div>
	<% if @articles.empty? %>
		<h1 id="no-articles">no articles created</h1>
		<%else%>
		<% @articles.each do |article|%>
		<div class=" full-article index-article">
				<div class=" article-wrapper">
					<div class=" article-title">
						<%=link_to article.title, article_path(article), class: "title-lnk"%>
					</div>
					<div class="article-body">
						<p><%=truncate(article.body,length: 500)%></p>
					</div>
					<div class="author">
						<p>
							Created by
							<%=article.user.email%></p>
					</div>
				</div>
			</div>
			<% end %>
	 <%end %>
</div>
